<% if notice %>
	<p id="notice"><%= notice %></p>
<% elsif flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
<% end %>
<!-- END_HIGHLIGHT -->

<p>
  <b>Title:</b>
  <%= @job.title %>
</p>

<p>
  <b>Area:</b>
  <%= Area.find(@job.area).name %>
</p>

<p>
  <b>Category:</b>
  <%= Category.find(@job.category).name %>
</p>

<p>
  <b>Description:</b>
  <%= @job.description %>
</p>


